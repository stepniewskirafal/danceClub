<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">
    <changeSet id="0004-1" author="danceClub">
        <createTable tableName="unit">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name"               type="VARCHAR(100)"/>
            <column name="school_id"          type="INT"/>
            <column name="female_teacher_id"  type="INT"/>
            <column name="male_teacher_id"    type="INT"/>
            <column name="genre_id"           type="INT"/>
            <column name="short_description"  type="VARCHAR(200)"/>
            <column name="description"        type="VARCHAR(10000)"/>
            <column name="poster"             type="VARCHAR(100)"/>
            <column name="promoted"           type="BOOLEAN"/>
        </createTable>
    </changeSet>
</databaseChangeLog>