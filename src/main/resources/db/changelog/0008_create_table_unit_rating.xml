<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">
    <changeSet id="0004-1" author="danceClub">
        <createTable tableName="unit_rating">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_unit_rating_user_id"
                             referencedTableName="users"
                             referencedColumnNames="id"
                />
            </column>
            <column name="unit_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_unit_rating_unit_id"
                             referencedTableName="unit"
                             referencedColumnNames="id"
                />
            </column>
            <column name="rating" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint constraintName="unique_unit_rating"
                             tableName="unit_rating"
                             columnNames="user_id, unit_id"
        />
    </changeSet>
</databaseChangeLog>